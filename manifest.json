{
    "manifest_version": 2,
    "name": "UI Stack",
    "description": "A chrome extension to inspect a website's framework and libraries ",
    "version": "1.0",
    "author": "Stanislav Iliev",
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "src/popup.html"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["build/content.js"]
        }
    ],
    "web_accessible_resources": ["build/checker.js"]
}